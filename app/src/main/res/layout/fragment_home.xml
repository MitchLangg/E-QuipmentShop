<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/homeTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:text="@string/title1"
            android:padding="@dimen/homePadding"
            android:textColor="@color/homeText"
            android:textAlignment="center"
            android:textSize="@dimen/homeTitleSize"
            android:typeface="serif" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="@dimen/homePadding"
            android:textAlignment="center"
            android:background="@color/textBackground"
            android:textSize="@dimen/homeTextSize"
            android:text="@string/desc1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:padding="@dimen/homePadding"
            android:textColor="@color/homeText"
            android:text="@string/title2"
            android:textAlignment="center"
            android:textSize="@dimen/homeTitleSize"
            android:typeface="serif"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="@dimen/homePadding"
            android:textAlignment="center"
            android:background="@color/textBackground"
            android:textSize="@dimen/homeTextSize"
            android:text="@string/desc2"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/homePadding"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="@color/homeText"
            android:fontFamily="sans-serif-black"
            android:textSize="@dimen/homeTitleSize"
            android:text="@string/title3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/textBackground"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="@dimen/homePadding"
            android:textAlignment="center"
            android:textSize="@dimen/homeTextSize"
            android:text="@string/desc3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/homePadding"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="@color/homeText"
            android:fontFamily="sans-serif-black"
            android:textSize="@dimen/homeTitleSize"
            android:text="@string/title4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/homePadding"
            android:textAlignment="center"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:background="@color/textBackground"
            android:textSize="@dimen/homeTextSize"
            android:text="@string/desc4"/>
        <TextView
            android:id="@+id/TextView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1" />

    </LinearLayout>
    </ScrollView>
</FrameLayout>