<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.stickpick.stickPickFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

        <LinearLayout
            android:id="@+id/stickPickLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/stickPickTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Stick Picker"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:padding="7dp"
            android:textColor="#ad6a6a"
            android:textAlignment="center"
            android:textSize="28sp"
            android:typeface="serif"
            android:background="@color/textBackground"/>

            <TextView
                android:id="@+id/ageTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Please select your age"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:padding="7dp"
                android:textColor="#ad6a6a"
                android:textAlignment="center"
                android:textSize="@dimen/stickPickSize"
                android:typeface="serif"

                />

            <NumberPicker
                android:id="@+id/numberPickerAge"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/heightTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Please select your height(CM)"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:padding="7dp"
                android:textColor="#ad6a6a"
                android:textAlignment="center"
                android:textSize="@dimen/stickPickSize"
                android:typeface="serif"
                />

            <NumberPicker
                android:id="@+id/numberPickerHeight"
                android:layout_width="match_parent"
                android:layout_height="60dp" />


            <TextView
                android:id="@+id/weightTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Please select your weight"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:padding="7dp"
                android:textColor="#ad6a6a"
                android:textAlignment="center"
                android:textSize="@dimen/stickPickSize"
                android:typeface="serif"
                />

            <NumberPicker
                android:id="@+id/numberPickerWeight"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Submit!"
                android:background="#ad6a6a"
                />
            <TextView
                android:id="@+id/regularStickTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/stickPickTitle"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:padding="2dp"
                android:textColor="#ad6a6a"
                android:textAlignment="center"
                android:textSize="@dimen/stickPickSize"
                android:typeface="serif"
                />

            <TextView
                android:id="@+id/stickText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:textColor="#ad6a6a"
                android:textAlignment="center"
                android:textSize="@dimen/stickPickSize"
                android:typeface="serif"
                />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter"
                android:paddingLeft="1.5in"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/cheaperStickTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/cheaperStickPickText"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:padding="2dp"
                android:textColor="#ad6a6a"
                android:textAlignment="center"
                android:textSize="@dimen/stickPickSize"
                android:typeface="serif"
                />

            <TextView
                android:id="@+id/cheaperStickText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:textColor="#ad6a6a"
                android:textAlignment="center"
                android:textSize="@dimen/stickPickSize"
                android:typeface="serif"
                />
            <ImageView
                android:id="@+id/cheaperImage"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="1.5in"
                android:paddingBottom="50dp"
                />


        </LinearLayout>
    </ScrollView>
</FrameLayout>